    <div class="co-md-12 co-lg-12 mb-30">
        <div class="box">
            <div class="box-head">
                <h4 class="title"> ویرایش کاربر </h4>
            </div>
            <div class="box-body">
                <div class="row mbn-20">

                    {{!-- form field --}}
                    <form  action="/admin/users/update/{{user.ID}}" method="post">
                        <div class="col-lg-20 col-12 mb-20">
                        {{#if hasError}}
                        <div class="alert alert-outline-secondary" role="alert">
                            {{#each errors}}
                            <span>{{this}}</span>
                            {{/each}}                            
                        </div>
                        {{/if}}
                        <div class="col-12 mb-30">
                            <input type="text" name="userName" placeholder="نام کاربری" id="" class="form-control" value="{{user.full_name}}">
                        </div>
                        <div class="col-12 mb-30">
                            <input type="text" name="email" placeholder="ایمیل" id="" class="form-control" value="{{user.email}}">
                        </div>
                        <div class="col-12 mb-30">
                            <input type="password" name="password" placeholder="گذرواژه" id="" class="form-control" value="{{user.password}}">
                        </div>
                        
                        <div class="col-12 mb-30">
                            <h6 class="mb-15">سمت کاربر</h6>

                            <label for=""><input type="radio" name="role" id="" value="0" checked>مدیر</label>
                            <label for=""><input type="radio" name="role" id="" value="1">نویسنده</label>
                            <label for=""><input type="radio" name="role" id="" value="2">مدیر سئو</label>

                        </div>
