
    <div class="co-md-12 co-lg-12 mb-30">
        <div class="box">
            <div class="box-head has-opration">
                <h4 class="title"> لیست مطالب </h4>
                <div class="oprations">
                    <a href="/admin/posts/create" class="button button-primary">
                        <span><i class="zmdi zmdi-plus"></i>ایجاد مطلب جدید</span>
                    </a>
                </div>
            </div>
            <div class="box-body">
                <table class="table">
                    <theat class="theat-dark">
                        <tbody class="co-tb-sp">
                            <tr>
                            <th>#</th>
                            <th>عنوان</th>
                            <th>نویسنده</th>
                            <th>تاریخ انتشار</th>
                            <th>تعداد بازدید</th>
                            <th>عملیات</th>
                        </tr>
                        </tbody>
                    </theat>
                    <tbody>
                        {{#each posts}}
                        <tr>
                        <td>{{this.ID}}</td>
                        <td>
                            <a href="#">{{this.title}}</a>
                        </td>
                        <td>{{this.full_name}}</td>
                        <td>{{this.created_at_persian}}</td>
                        <td>{{this.persianviews}}</td>
                        <td>
                            <a href="/admin/posts/edit/{{this.ID}}">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="/admin/posts/delete/{{this.ID}}">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>  
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
