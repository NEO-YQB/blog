<div class="co-me-12 col-lh-15 mb-30">
        <div class="box">
            <div class="box-head">
                <h4 class="title">دیدگاه ها</h4>
            </div>
            <div class="box-body">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>نویسنده</th>
                            <th>دیدگاه</th>
                            <th>در پاسخ به</th>
                            <th>ارسال شده در</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each comments}}
                        <tr class="comment-row {{commentBackground this.status}}">
                            <td>
                                <div class="commenter">
                                    <div class="avatar mr-10 mb-10">
                                        <img src="{{this.userAvatar}}" alt="">
                                    </div>
                                    <div class="name mr-10 mt-10">
                                        {{this.user_name}}
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="comment">
                                    {{this.comment}}
                                </div>
                                <div class="comment-operations mt-10">
                                    <a href="/admin/comments/approve/{{this.ID}}" class="button button-xs button-succss"><span>تایید</span></a>
                                    <a href="/admin/comments/reject/{{this.ID}}" class="button button-xs button-warning"><span>رد</span></a>
                                    <a href="/admin/comments/delete/{{this.ID}}" class="button button-xs button-danger"><span>حذف</span></a>
                                </div>
                            </td>
                            <td>
                                <a href="">{{this.title}}</a>
                            </td>
                            <td>{{this.created_at_persian}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
</div>