<div class="row">
    <div class="co-md-12 col-lg-12 mb-30">
        <div class="box">
            <div class="box-head">
                <h4 class="title">تنظیمات</h4>
            </div>
            <form action="/admin/settings" method="POST">
                <div class="box-body">
                    <div class="row mbn-20">
                        <div class="col-lg-4 col-12 mb-20">
                            <h6 class="mb-15">عمومی</h6>
                            <div class="row mbn-15">
                                <div class="col-12 mb-30">
                                    <input name="website_title" type="text" placeholder="عنوان سایت"
                                        class="form-control" value="{{config.website_title}}">
                                </div>
                                <div class="col-12 mb-30">
                                    <textarea name="website_description" class="form-control"
                                        placeholder="توضیحات وب سایت">{{config.website_description}}</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-12 mb-20">
                            <h6 class="mb-15"> محتوا </h6>
                            <div class="row mbn-15">
                                <div class="col-12 mb-30">
                                    <input name="post_per_page" value="{{config.post_per_page}}" type="number"
                                        placeholder="تعداد مطالب هر صفحه" class="form-control">
                                </div>
                                <div class="col-12 mb-30">
                                    <label class="adomx-checkbox">
                                        <input name="users_can_submit_comment" type="checkbox" {{#isChecked config.users_can_submit_comment}}checked{{/isChecked}}><i
                                            class="icon"></i>کاربر می تواند دیدگاه ثبت
                                        کند
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-12 mb-20">
                            <h6 class="mb-15">عضویت</h6>
                            <div class="row mb-15">
                                <lable class="adomx-checkbox"><input name="users_can_register" type="checkbox"
                                        {{#isChecked config.users_can_register}}checked{{/isChecked}}><i class="icon"></i>هر
                                    کسی
                                    می تواند ثبت نام کند
                                </lable>
                            </div>
                        </div>
                        <div class="col-12 mb-30">
                            <button type="submit" class="button button-primary"><span>ذخیره سازی</span></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>